

<h1>Message List</h1>
<hr>

<% @messages.each do |message| %>
  <div class="message">
    <h3>Author: <%= message.author %></h3> 
    <p>
      <%= message.content %>
    </p>
    
    <p>
    	<small>URL:  <a href="<%= message.url %>"><%= message.url %></a></small>
    </p>
    <p>
    	<small><a href="/messages/<%= message.id %>">Show Message </a></small>
    </p>

    <hr>
     
    
  </div>
<% end %>

<a href="/messages/new">Post a message... It's FREE (for now)!</a>
